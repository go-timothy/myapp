<section>
  <div class="add-task">
    <button>
      <%= link_to "New Task", new_task_path %>
    </button>
    <h3>Total tasks: <%= @tasks.count %></h3>
  </div>
  <ol>
    <% @tasks.each do | task | %>
      <li>
        <div class="task-container">
          <div class="row">
            <div class="md-8">
              <div>Title: <%= task.title %></div>
              <div>Detail: <%= task.detail %></div>
            </div>
            <div class="md-4 task-actions">
                <%= button_to "Edit", task %>
                <%= button_to 'Destroy',
                    task_path(task),
                    form: { data: {
                      turbo_confirm: 'Are you sure you want to delete?'
                    }},
                    method: :delete,
                    :remote => true,
                    class: "action delete-task"
                %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</section>

